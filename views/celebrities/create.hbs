<label for="input-occupation">Occupation</label>
<input type="text" id="input-occupation" name="occupation" placeholder ="Occupation" required/>

<label for="input-catchphrase">Catch Phrase</label>
<input type="text" id="input-catchphrase" name="catchPhrase" placeholder ="Catch Phrase" required/>

<button>Submit</button>

</form>